html 
    head 
        title='Productos'
    body 
    if datos == ""
        div=mensaje
    else 
        table(class="table")
            thead 
                tr 
                    th(scope='col')="Nombre"
                    th(scope='col')="Precio"
                    th(scope='col')='Imagen'
            tbody 
                each producto in datos
                    tr 
                        td=producto.nombre 
                        td=producto.precio
                        td
                            img(src=producto.imagen, alt=producto.nombre)
        a(href="/")='Ir Al Formulario' 